<h1>Listing pictures</h1>

<table>
  <thead>
    <tr>
      <th colspan="5">Pictures</th>
      <!--th>Name</th-->
      <!--th colspan="3"></th-->
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
	<td><h1><%= picture.name %></h1></td>
	<% if current_admin %>
	  <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
	  <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
	</tr><tr>
	<td><%= link_to image_tag(picture.data, :size => "200x200"), picture %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>